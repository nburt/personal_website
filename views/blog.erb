<% @current = "blog" %>
<% if logged_in == true %>
  <br>
  <div class="link_container">
    <a id="create_blog_link" href="/blog/new">Create a New Blog Post</a>
  </div>
<% end %>
<div id="recent_posts_container">
  <ol>
    <% recent_posts.each do |post| %>
      <li id="blog_post_list"><a href="<%= url_host %>/blog/<%= post[:recent_urls] %>"><%= post[:recent_titles] %></a>
        - <%= post[:date].strftime('%-m/%-d/%Y') %></li>
      <br>
    <% end %>
  </ol>
</div>