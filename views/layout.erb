<body>
<div id="background_picture">
  <div id="top_header">
    <a href="/">Nathanael Burt</a>
  </div>
  <nav>
    <div id="nav_container">
      <ul>
        <li><a href="/blog" class="<%= "current" if @current == "blog" %>">Blog</a></li>
        <li><a href="/portfolio" class="<%= "current" if @current == "portfolio" %>">Portfolio</a></li>
        <li><a href="/resume" class="<%= "current" if @current == "resume" %>">Resume</a></li>
        <% if logged_in %>
          <li><a href="/logout">Logout</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
<%= yield %>
<footer>
  <ul>
    <li><a href="mailto:nathanael.burt@gmail.com" target="_blank"><img src="/images/social-icons-27.png" alt="email icon"></a></li>
    <li><a href="http://www.twitter.com/Nathanael_Burt" target="_blank"><img src="/images/social-icons-22.png" alt="Twitter logo"></a></li>
    <li><a href="http://www.linkedin.com/in/nathanaelburt/" target="_blank"><img src="/images/social-icons-24.png" alt="LinkedIn logo"></a></li>
